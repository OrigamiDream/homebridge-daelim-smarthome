{
  "compilerOptions": {
    "target": "ES2019",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019"
    ],
    "sourceMap": true,
    "rootDirs": ["homebridge", "core", "homebridge-ui"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "homebridge",
    "core",
    "homebridge-ui"
  ],
  "exclude": [
    "homebridge-ui/public"
  ]
}